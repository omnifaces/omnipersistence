<persistence
    xmlns="https://jakarta.ee/xml/ns/persistence"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
    version="3.0"
>
    <persistence-unit name="OmniPersistenceCDIIT">
        <jta-data-source>java:app/OmniPersistenceCDIIT</jta-data-source>

        <!-- Needed for OpenJPA only! -->
        <class>org.omnifaces.persistence.model.BaseEntity</class>

        <properties>
            <!-- JPA -->
            <property name="jakarta.persistence.schema-generation.database.action" value="drop-and-create" /> <!-- ignored by OpenJPA! it instead uses openjpa.jdbc.SynchronizeMappings property -->
            <property name="jakarta.persistence.schema-generation.create-source" value="metadata-then-script" />
            <property name="jakarta.persistence.schema-generation.create-script-source" value="META-INF/sql/create-test.sql" />
            <property name="jakarta.persistence.schema-generation.drop-source" value="metadata-then-script" />
            <property name="jakarta.persistence.schema-generation.drop-script-source" value="META-INF/sql/drop-test.sql" />
            <property name="jakarta.persistence.sql-load-script-source" value="META-INF/sql/load-test.sql" />

            <!-- Hibernate -->
            <property name="hibernate.show_sql" value="true" />
            <property name="hibernate.cache.use_second_level_cache" value="false" />
            <property name="hibernate.cache.use_query_cache" value="false" />

            <!-- EclipseLink -->
            <property name="eclipselink.logging.logger" value="ServerLogger"/>
            <property name="eclipselink.logging.level.sql" value="FINE" />
            <property name="eclipselink.logging.timestamp" value="false" />
            <property name="eclipselink.logging.thread" value="false" />
            <property name="eclipselink.logging.session" value="false" />

            <!-- OpenJPA -->
            <property name="openjpa.jdbc.SynchronizeMappings" value="buildSchema(validate=true,foreignKeys=true,schemaAction='dropDB,add')" />
            <property name="openjpa.Log" value="DefaultLevel=WARN, Runtime=INFO, SQL=TRACE" />

            <!-- WildFly -->
            <property name="wildfly.jpa.twophasebootstrap" value="false" /> <!-- https://issues.jboss.org/browse/WFLY-2727 -->
        </properties>
    </persistence-unit>
</persistence>